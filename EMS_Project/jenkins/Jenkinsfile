pipeline {
    agent any
    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/your-repo/employee-management-system.git'
            }
        }
        stage('Build Backend') {
            steps {
                sh 'docker-compose build backend'
            }
        }
        stage('Run Tests') {
            steps {
                echo 'Tests go here.'
            }
        }
        stage('Deploy Containers') {
            steps {
                sh 'docker-compose up -d'
            }
        }
    }
}
